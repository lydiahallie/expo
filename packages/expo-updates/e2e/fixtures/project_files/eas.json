{
  "cli": {
    "version": ">= 2.7.1"
  },
  "build": {
    "base": {
      "node": "18.18.0"
    },
    "development": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "updates_testing_debug": {
      "extends": "base",
      "env": {
        "EX_UPDATES_NATIVE_DEBUG": "1",
        "NO_FLIPPER": "1"
      },
      "android": {
        "image": "ubuntu-22.04-jdk-17-ndk-r21e",
        "gradleCommand": ":app:assembleDebug :app:assembleAndroidTest -DtestBuildType=debug",
        "withoutCredentials": true,
        "resourceClass": "large"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "m-medium",
        "image": "macos-ventura-13.3-xcode-14.3",
        "buildConfiguration": "Debug",
        "cache": {
          "cacheDefaultPaths": false
        }
      },
      "distribution": "internal",
      "buildArtifactPaths": ["logs/*.log"]
    },
    "updates_testing_release": {
      "extends": "base",
      "env": {
        "EX_UPDATES_NATIVE_DEBUG": "1",
        "NO_FLIPPER": "1"
      },
      "android": {
        "image": "ubuntu-22.04-jdk-17-ndk-r21e",
        "gradleCommand": ":app:assembleRelease :app:assembleAndroidTest -DtestBuildType=release",
        "withoutCredentials": true,
        "resourceClass": "large"
      },
      "ios": {
        "simulator": true,
        "resourceClass": "m-medium",
        "image": "macos-ventura-13.3-xcode-14.3",
        "buildConfiguration": "Release",
        "cache": {
          "cacheDefaultPaths": false
        }
      },
      "distribution": "internal",
      "buildArtifactPaths": ["logs/*.log"]
    },

    // Maestro
    "update_testing_maestro_release": {
      "extends": "base",
      "env": {
        "EX_UPDATES_NATIVE_DEBUG": "1"
      },
      "withoutCredentials": true,
      "config": "maestro-e2e.yaml",
      "distribution": "internal",
      "android": {
        "image": "latest",
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "image": "latest",
        "simulator": true,
        "buildConfiguration": "Release"
      }
    },
    "updates_testing_maestro_debug": {
      "extends": "update_testing_maestro_release",
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },

    "production": {
      "extends": "base"
    }
  },
  "submit": {
    "production": {}
  }
}
